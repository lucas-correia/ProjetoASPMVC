@model IEnumerable<CadeMeuMedico.Models.Medico>

@{
    ViewBag.Title = "Médicos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar novo médico", "Adicionar", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Cidade
        </th>
        <th>
            Especialidade
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IDMedico }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IDMedico }, new { @class = "excluir" })
            </td>
        </tr>
    }
</table>
